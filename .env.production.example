# ========================================
# DOCTIC MEDICAL OS - Production Environment
# Version: 2.1.0
# ========================================

# Serveur
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://doctic.fr

# Google OAuth (PRODUCTION)
GOOGLE_CLIENT_ID=votre-production-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=votre-production-client-secret

# JWT Secrets (64+ caractères recommandé)
# GÉNÉRER AVEC: npm run generate:secrets
JWT_SECRET=REMPLACER_PAR_SECRET_64_CARACTERES_MINIMUM
JWT_REFRESH_SECRET=REMPLACER_PAR_SECRET_64_CARACTERES_DIFFERENT
SESSION_SECRET=REMPLACER_PAR_SECRET_64_CARACTERES_UNIQUE

# PostgreSQL Production
DATABASE_URL=postgresql://prod_user:secure_password@db-host:5432/doctic_prod?schema=public&sslmode=require

# Redis Production (REQUIS)
REDIS_URL=redis://username:password@redis-host:6379

# Email (SendGrid recommandé en prod)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=votre-sendgrid-api-key

# Daily.co Production
DAILY_API_KEY=votre-production-daily-api-key

# Stripe Production
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AWS S3 Production
AWS_ACCESS_KEY_ID=votre-production-access-key
AWS_SECRET_ACCESS_KEY=votre-production-secret
AWS_REGION=eu-west-1
S3_BUCKET_PRESCRIPTIONS=doctic-prod-prescriptions
S3_BUCKET_TELECONSULT=doctic-prod-teleconsult

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
SENTRY_TRACES_SAMPLE_RATE=0.1

# OpenAI Production
OPENAI_API_KEY=sk-proj-...

# Twilio Production
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+33...

# Sécurité Production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=14

# Logs
LOG_LEVEL=warn
